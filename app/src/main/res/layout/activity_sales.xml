<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Restaurant Name -->
        <TextView

            android:id="@+id/tvRestaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Total Sales -->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Sales:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/tvTotalSales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Dishes Cooked Today -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dishes Cooked Today:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/tvDishesToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Top 3 Dishes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top 3 Dishes:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/tvTopDishes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Chef Analytics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chef Analytics"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:textColor="@color/white"
                android:id="@+id/spinnerChefs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/tvChefAnalytics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dishes cooked: 0"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <!-- Waiter Served Tables -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiter Served Tables"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerWaiters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/tvWaiterTableAnalytics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total tables: 0"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <!-- Waiter Billing Analytics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiter Billing Analytics"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:textColor="@color/white"
                android:id="@+id/spinnerBillers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/tvWaiterBillingAnalytics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total billed: $0.00"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <!-- Table Income Dropdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"

            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:layout_marginBottom="46dp">

            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Table Income Analytics"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:textColor="@color/white"
                android:id="@+id/spinnerTables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/tvTableIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total income: $0.00"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>